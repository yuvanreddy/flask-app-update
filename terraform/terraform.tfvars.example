# Copy this file to terraform.tfvars and update with your values
# cp terraform.tfvars.example terraform.tfvars

# AWS Configuration
aws_region   = "us-east-1"
project_name = "flask-app"
environment  = "development"

# EKS Cluster Configuration
cluster_name                    = "flask-app-cluster"
kubernetes_version              = "1.28"
cluster_endpoint_public_access  = true
cluster_endpoint_private_access = true

# VPC Configuration
vpc_cidr        = "10.0.0.0/16"
private_subnets = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
public_subnets  = ["10.0.101.0/24", "10.0.102.0/24", "10.0.103.0/24"]

# Use single NAT Gateway for cost optimization (not recommended for production)
single_nat_gateway = true

# Node Group Configuration
node_instance_types      = ["t3.medium"]
node_capacity_type       = "ON_DEMAND"
node_disk_size           = 20
node_group_min_size      = 2
node_group_max_size      = 5
node_group_desired_size  = 3

# Spot Instances Configuration (Optional)
enable_spot_instances        = false
spot_instance_types          = ["t3.medium", "t3a.medium"]
spot_node_group_min_size     = 0
spot_node_group_max_size     = 3
spot_node_group_desired_size = 0

# Cloudsmith Configuration (for Kubernetes secret)
# Set these via environment variables or use -var flag:
# export TF_VAR_cloudsmith_username="your-username"
# export TF_VAR_cloudsmith_api_key="your-api-key"
# cloudsmith_username = "your-username"
# cloudsmith_api_key  = "your-api-key"

# Additional Tags
tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Terraform   = "true"
}